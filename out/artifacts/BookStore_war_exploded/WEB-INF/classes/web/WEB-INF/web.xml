<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--用户登录注册相关的servlet-->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.zhangft.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/userServlet</url-pattern>
    </servlet-mapping>

    <!--后台管理相关的servlet-->
    <servlet>
        <servlet-name>BookManagerServlet</servlet-name>
        <servlet-class>com.zhangft.servlet.BookManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookManagerServlet</servlet-name>
        <url-pattern>/manager/bookManagerServlet</url-pattern>
    </servlet-mapping>

    <!--客户端相关的servlet-->
    <servlet>
        <servlet-name>BookClientServlet</servlet-name>
        <servlet-class>com.zhangft.servlet.BookClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookClientServlet</servlet-name>
        <url-pattern>/client/bookClientServlet</url-pattern>
    </servlet-mapping>

    <!--验证码相关的servlet-->
    <servlet>
        <servlet-name>KaptchaServlet</servlet-name>
        <servlet-class>com.google.code.kaptcha.servlet.KaptchaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>KaptchaServlet</servlet-name>
        <url-pattern>/code.jpg</url-pattern>
    </servlet-mapping>

    <!--购物车相关的servlet-->
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.zhangft.servlet.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/client/cartServlet</url-pattern>
    </servlet-mapping>

    <!--客户订单相关的servlet-->
    <servlet>
        <servlet-name>ClientOrderServlet</servlet-name>
        <servlet-class>com.zhangft.servlet.ClientOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientOrderServlet</servlet-name>
        <url-pattern>/client/clientOrderServlet</url-pattern>
    </servlet-mapping>

    <!--管理员订单相关的servlet-->
    <servlet>
        <servlet-name>ManagerOrderServlet</servlet-name>
        <servlet-class>com.zhangft.servlet.ManagerOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerOrderServlet</servlet-name>
        <url-pattern>/manager/managerOrderServlet</url-pattern>
    </servlet-mapping>

    <!--判断用户是否登录的filter-->
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.zhangft.servlet.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/manager/managerOrderServlet</url-pattern>
        <url-pattern>/client/clientOrderServlet</url-pattern>
    </filter-mapping>
</web-app>